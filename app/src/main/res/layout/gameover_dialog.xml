<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:contentDescription="game over dialog"
    android:background="@drawable/shape_rounded_blue"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/dialogTvHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game Over!"
        android:fontFamily="@font/roboto_mono"
        android:textSize="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:layout_marginTop="24sp"
        android:textColor="@color/white"/>
    <TextView
        android:gravity="center"
        android:id="@+id/gameOverDialogTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_mono"
        android:text="The correct answer was:"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialogTvHeader"
        android:layout_marginTop="14sp"/>
    <TextView
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvGameOverDialogCorrectAnswer"
        android:text="'#####'"
        android:textColor="@color/white"
        android:textSize="32sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gameOverDialogTv"
        android:layout_marginTop="14sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/tvTryAgainBtn"
        android:background="@drawable/ripple_white"
        android:text="Try Again"
        android:clickable="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvGameOverDialogCorrectAnswer"
        android:layout_marginTop="24sp"
        android:paddingHorizontal="24sp"
        android:paddingVertical="10sp"
        android:textSize="20sp"
        android:textColor="@color/dark_blue"
        android:fontFamily="@font/roboto_mono"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="24sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>