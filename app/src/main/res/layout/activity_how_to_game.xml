<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    tools:context=".HowToGame">

    <TextView
        android:id="@+id/instructTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instructions:"
        android:fontFamily="@font/roboto_slab"
        android:textColor="@color/white"
        android:textSize="32sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="24sp"
        />
    <TextView
        android:id="@+id/instructions01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/instructions_txt_1"
        android:textSize="14sp"
        android:fontFamily="@font/roboto_mono"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/instructTv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="24sp"
        android:layout_marginTop="10sp"
        />
    <ImageView
        android:contentDescription="sample word guess"
        android:id="@+id/ivSampleTry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sample_try"
        app:layout_constraintTop_toBottomOf="@id/instructions01"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="24sp"
        android:layout_marginTop="20sp"
        />
    <TextView
        android:id="@+id/instructions02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/instructions_txt_2"
        android:textSize="14sp"
        android:fontFamily="@font/roboto_mono"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/ivSampleTry"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="24sp"
        android:layout_marginTop="20sp"
        />
    <TextView
        android:elevation="7sp"
        android:id="@+id/tvInstructDoneBtn"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@drawable/ripple_white"
        android:clickable="true"
        android:text="Got it"
        android:gravity="center"
        android:fontFamily="@font/roboto_mono"
        android:textColor="@color/dark_blue"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/instructions02"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="24sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>